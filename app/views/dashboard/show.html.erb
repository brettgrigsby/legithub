<div class="container-fluid container-home">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <h2 class="home">Your Information:</h2>
      <h3 class="home">Followers: <%= @client.user.followers %></h3>
      <h3 class="home">Following: <%= @client.user.following %></h3>
      <h3 class="home">Starred Repos: <%= @client.starred.count %></h3>
      <% @client.organizations.each do |org| %>
        <div><%= org.login %></div>
      <% end %>
    </div>
    <div class="col-md-4">
      <h1 class="text-center home"><%= current_user.name %></h1>
      <img src=<%= current_user.image %> alt="profile pic" class="img-circle center-block" style="height: 200px;">
      
    </div>
    <div class="col-md-3">
      <% @events.each do |event| %>
        <div class="event">
          <h4><img src=<%= event.actor.avatar_url %> alt="actor thumbnail" class="img-circle" style="height: 30px; verticle-align: middle">  <%= event.type[0..-6] %> | <%= event.created_at.strftime("%d/%m/%Y") %></h4>
          <h5><%= link_to event.repo.name, event.repo.url %></h5>
        </div>
      <% end %>
    </div>
    <div class="col-md-1"></div>
  </div>

  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
